@model IEnumerable<StudentTeacherSubject.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
}

<h1>Subjects</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>            
            <th>Languages</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)

        {
            <tr>
                <td>@subject.Name</td>
                <td>@subject.Class</td>
                <td>
                    @foreach (var language in subject.Languages)
                    {
                        <div>@language.Name</div>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@subject.Id" class="btn btn-warning">Edit</a>
                  
                    <a asp-action="Delete" asp-route-id="@subject.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
