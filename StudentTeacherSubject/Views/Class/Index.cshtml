@model IEnumerable<StudentTeacherSubject.Models.Class>

<h2>Classes</h2>
<p>
    <a href="@Url.Action("Create", "Class")" class="btn btn-primary">Create New</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>Class</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var classEntity in Model)
        {
            <tr>
                <td>@classEntity.Name</td>
                <td>
                    <a asp-action="AssignTeachers" asp-route-id="@classEntity.Id" class="btn btn-secondary">Assign Teacher</a>
                </td>
            </tr>
        }
    </tbody>
</table>
