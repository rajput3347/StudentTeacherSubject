@model StudentTeacherSubject.Models.Student
@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Father Name
        </dt>
        <dd class="col-sm-10">
            @Model.FatherName
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Model.Age
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
      
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="~/images/students/" alt="@Model.Name" style="width:100px;" />
            }
        </dd>
    </dl>
</div>
<br />

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("AddStudentSubject", "Student", new { id = Model.Id })" class="btn btn-info">Add Subject</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</p>
