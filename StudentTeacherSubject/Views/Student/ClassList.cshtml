@model StudentTeacherSubject.ViewModel.ClassGroupViewModel


@{
    ViewData["Title"] = "Student List";
}

<h2>Student List</h2>

<form asp-controller="Student" asp-action="ClassList">
    <p>
        Search by name: <input type="text" name="searchString" value="@Model.SearchString" />
        Class:
        <select asp-for="StudentClass" asp-items="Model.Classes">
            <option value="">All</option>
        </select>
        <input type="submit" value="Filter" class="btn btn-primary" />
    </p>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Students[0].Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].RollNumber)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>@Html.DisplayFor(modelItem=>item.Class)</td>
                <td>@Html.DisplayFor(modelItem => item.RollNumber)</td>
            </tr>
        }
    </tbody>
</table>